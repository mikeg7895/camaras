<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Server.Desktop.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="Server.Desktop.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Camera Server - User Management"
        Width="1200" Height="700"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#0078D4" 
                Padding="20">
            <StackPanel Orientation="Horizontal" Spacing="15">
                <TextBlock Text="ðŸ‘¥" FontSize="32" VerticalAlignment="Center"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Camera Server" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="User Management System" 
                               FontSize="14" 
                               Foreground="#E0E0E0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- All Users Panel -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    BoxShadow="0 2 4 0 #20000000">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Title and Refresh -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="All Users" 
                                       FontSize="20" 
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding AllUsers.Count, StringFormat='Total: {0} users'}" 
                                       FontSize="12" 
                                       Foreground="#666"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Content="ðŸ”„ Refresh"
                                Command="{Binding LoadUsersCommand}"
                                Background="#E0E0E0"
                                Padding="15,10"
                                CornerRadius="4"
                                IsEnabled="{Binding !IsLoading}"/>
                    </Grid>

                    <!-- Users List -->
                    <ScrollViewer Grid.Row="1">
                        <ItemsControl ItemsSource="{Binding AllUsers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F9F9F9" 
                                            CornerRadius="6" 
                                            Padding="15"
                                            Margin="0,0,0,10"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Status Icon -->
                                            <Border Grid.Column="0" 
                                                    Width="50" 
                                                    Height="50"
                                                    CornerRadius="25"
                                                    Margin="0,0,15,0"
                                                    Background="{Binding Approved, Converter={StaticResource StatusColorConverter}}">
                                                <TextBlock Text="ðŸ‘¤" 
                                                           FontSize="24" 
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- User Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Username}" 
                                                           FontSize="16" 
                                                           FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Email}" 
                                                           FontSize="12" 
                                                           Foreground="#666"
                                                           Margin="0,2,0,0"/>
                                                <TextBlock Text="{Binding Approved, Converter={StaticResource StatusTextConverter}}" 
                                                           FontSize="11" 
                                                           Foreground="{Binding Approved, Converter={StaticResource StatusColorConverter}}"
                                                           FontWeight="Medium"
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>

                                            <!-- Actions -->
                                            <StackPanel Grid.Column="2" 
                                                        Orientation="Horizontal" 
                                                        Spacing="8"
                                                        VerticalAlignment="Center">
                                                <Button Content="âœ“ Approve"
                                                        Command="{Binding $parent[Window].DataContext.ApproveUserCommand}"
                                                        CommandParameter="{Binding .}"
                                                        IsVisible="{Binding !Approved}"
                                                        Background="#4CAF50"
                                                        Foreground="White"
                                                        Padding="12,6"
                                                        CornerRadius="4"/>
                                                <Button Content="âœ— Reject"
                                                        Command="{Binding $parent[Window].DataContext.RejectUserCommand}"
                                                        CommandParameter="{Binding .}"
                                                        IsVisible="{Binding Approved}"
                                                        Background="#F44336"
                                                        Foreground="White"
                                                        Padding="12,6"
                                                        CornerRadius="4"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Pending Users Panel -->
            <Border Grid.Column="2" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    BoxShadow="0 2 4 0 #20000000">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="â³ Pending Approval" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding PendingUsers.Count, StringFormat=\{0\} users waiting}" 
                                   FontSize="12" 
                                   Foreground="#FF9800"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1">
                        <ItemsControl ItemsSource="{Binding PendingUsers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FFF3E0" 
                                            CornerRadius="6" 
                                            Padding="12"
                                            Margin="0,0,0,10"
                                            BorderBrush="#FF9800"
                                            BorderThickness="1">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Username}" 
                                                       FontSize="14" 
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Email}" 
                                                       FontSize="11" 
                                                       Foreground="#666"
                                                       Margin="0,2,0,8"/>
                                            <Button Content="âœ“ Approve Now"
                                                    Command="{Binding $parent[Window].DataContext.ApproveUserCommand}"
                                                    CommandParameter="{Binding .}"
                                                    Background="#4CAF50"
                                                    Foreground="White"
                                                    Padding="10,5"
                                                    CornerRadius="4"
                                                    HorizontalAlignment="Stretch"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="#E0E0E0" 
                Padding="15,10"
                BorderBrush="#CCCCCC"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusMessage}" 
                           FontSize="12" 
                           VerticalAlignment="Center"/>

                <ProgressBar Grid.Column="1"
                             IsIndeterminate="True"
                             IsVisible="{Binding IsLoading}"
                             Width="150"
                             Height="20"
                             Foreground="#0078D4"/>
            </Grid>
        </Border>
    </Grid>
</Window>
