@model Server.Web.Models.CameraListViewModel
@{
    ViewData["Title"] = "C√°maras";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>üé• Listado de C√°maras</h1>
        @if (Model.UserId > 0)
        {
            <div>
                <span class="badge bg-info fs-6">Usuario: @Model.Username</span>
                <a asp-controller="Users" asp-action="Index" class="btn btn-secondary">Ver Todos los Usuarios</a>
            </div>
        }
    </div>

    <div class="row">
        @if (Model.Cameras.Any())
        {
            @foreach (var camera in Model.Cameras)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-header @(camera.Status ? "bg-success" : "bg-secondary") text-white">
                            <h5 class="mb-0">üìπ @camera.Name</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Estado:</strong> <span class="badge @(camera.Status ? "bg-success" : "bg-secondary")">@camera.StatusText</span></p>
                            <p><strong>Device ID:</strong> <code>@camera.DeviceId.ToString().Substring(0, 8)...</code></p>
                            <p><strong>√çndice:</strong> @camera.CameraIndex</p>
                            <p><strong>Propietario:</strong> @camera.OwnerUsername</p>
                            <p><strong>Videos:</strong> <span class="badge bg-info">@camera.VideosCount</span></p>
                        </div>
                        <div class="card-footer">
                            <a asp-controller="Cameras" asp-action="Details" asp-route-id="@camera.Id" class="btn btn-primary w-100">
                                <i class="bi bi-eye"></i> Ver Detalles
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No hay c√°maras registradas @(Model.UserId > 0 ? "para este usuario" : "en el sistema").
                </div>
            </div>
        }
    </div>
</div>
