@model Server.Web.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard - Sistema de Cámaras";
}

<div class="container-fluid">
    <h1 class="mb-4">📊 Dashboard del Sistema</h1>

    <!-- Cámara con más archivos -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">🎥 Cámara con Más Videos Enviados</h5>
                </div>
                <div class="card-body">
                    @if (Model.CameraWithMostVideos != null)
                    {
                        <div class="row">
                            <div class="col-md-4">
                                <h6>Cámara:</h6>
                                <p class="h4">@Model.CameraWithMostVideos.CameraName</p>
                            </div>
                            <div class="col-md-4">
                                <h6>Propietario:</h6>
                                <p class="h4">@Model.CameraWithMostVideos.OwnerUsername</p>
                            </div>
                            <div class="col-md-4">
                                <h6>Total de Videos:</h6>
                                <p class="h4 text-success">@Model.CameraWithMostVideos.VideoCount</p>
                            </div>
                        </div>
                        <a asp-controller="Cameras" asp-action="Details" asp-route-id="@Model.CameraWithMostVideos.CameraId" class="btn btn-primary">Ver Detalles</a>
                    }
                    else
                    {
                        <p class="text-muted">No hay datos disponibles</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Archivos enviados por tamaño -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">📁 Archivos Enviados (Últimos 20)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Videos.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Archivo</th>
                                        <th>Tamaño</th>
                                        <th>Fecha</th>
                                        <th>Cámara</th>
                                        <th>Propietario</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var video in Model.Videos)
                                    {
                                        <tr>
                                            <td>@video.FileName</td>
                                            <td><span class="badge bg-info">@video.FileSizeFormatted</span></td>
                                            <td>@video.RecordedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@video.CameraName</td>
                                            <td>@video.OwnerUsername</td>
                                            <td>
                                                <a asp-controller="Cameras" asp-action="DownloadVideo" asp-route-id="@video.VideoId" class="btn btn-sm btn-primary">
                                                    <i class="bi bi-download"></i> Descargar
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No hay videos disponibles</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Clientes Conectados y Desconectados -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">🟢 Usuarios Conectados</h5>
                </div>
                <div class="card-body">
                    @if (Model.ConnectedClients.Any())
                    {
                        <div class="list-group">
                            @foreach (var client in Model.ConnectedClients)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">🟢 @client.Username</h6>
                                        <small class="text-success">Activo</small>
                                    </div>
                                    <p class="mb-1"><i class="bi bi-globe"></i> IP: @client.IpAddress</p>
                                    <small class="text-muted">Conectado: @client.ConnectedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</small><br/>
                                    <small class="text-muted">Última actividad: @client.LastActivity.ToLocalTime().ToString("HH:mm:ss")</small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No hay usuarios conectados actualmente</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">⚫ Usuarios Desconectados</h5>
                </div>
                <div class="card-body">
                    @if (Model.DisconnectedClients.Any())
                    {
                        <div class="list-group">
                            @foreach (var client in Model.DisconnectedClients.Take(10))
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">⚫ @client.Username</h6>
                                        <small class="text-danger">Desconectado</small>
                                    </div>
                                    <p class="mb-1"><i class="bi bi-globe"></i> IP: @client.IpAddress</p>
                                    <small class="text-muted">Desconectado: @client.DisconnectedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")</small><br/>
                                    <small class="text-muted">Duración: @string.Format("{0:hh\\:mm\\:ss}", client.ConnectionDuration)</small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No hay registros de desconexiones recientes</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
