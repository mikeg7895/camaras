@model Server.Web.Models.ProcessedFrameListViewModel
@{
    ViewData["Title"] = "Frames Procesados";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>ðŸŽ¨ Frames Procesados por Filtro</h1>
    </div>

    <!-- Filtro -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-10">
                    <label for="filterSelect" class="form-label">Filtrar por tipo:</label>
                    <select id="filterSelect" name="filter" class="form-select">
                        <option value="">-- Todos los filtros --</option>
                        @foreach (var filterType in Model.AvailableFilters)
                        {
                            <option value="@filterType" selected="@(filterType == Model.SelectedFilter)">@filterType</option>
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel"></i> Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Listado de Frames -->
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                ðŸ“¸ Frames Procesados
                @if (!string.IsNullOrEmpty(Model.SelectedFilter))
                {
                    <span class="badge bg-light text-dark">Filtro: @Model.SelectedFilter</span>
                }
            </h5>
        </div>
        <div class="card-body">
            @if (Model.ProcessedFrames.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Imagen</th>
                                <th>Filtro Aplicado</th>
                                <th>Fecha Procesado</th>
                                <th>Video Original</th>
                                <th>CÃ¡mara</th>
                                <th>Propietario</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var frame in Model.ProcessedFrames)
                            {
                                <tr>
                                    <td>
                                        <i class="bi bi-image"></i>
                                        @frame.FileName
                                    </td>
                                    <td><span class="badge bg-info">@frame.FilterType</span></td>
                                    <td>@frame.ProcessedAt.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                    <td>
                                        <small>@frame.VideoFileName</small><br/>
                                        <small class="text-muted">@frame.VideoRecordedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                    <td>@frame.CameraName</td>
                                    <td>
                                        <strong>@frame.OwnerUsername</strong><br/>
                                        <small class="text-muted">@frame.OwnerEmail</small>
                                    </td>
                                    <td>
                                        <div class="btn-group-vertical btn-group-sm" role="group">
                                            <a asp-controller="ProcessedFrames" asp-action="DownloadFrame" asp-route-id="@frame.Id" class="btn btn-success">
                                                <i class="bi bi-download"></i> Descargar
                                            </a>
                                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#imageModal"
                                                    data-image-id="@frame.Id" data-image-name="@frame.FileName">
                                                <i class="bi bi-eye"></i> Ver
                                            </button>
                                            <a asp-controller="Cameras" asp-action="Details" asp-route-id="@frame.CameraId" class="btn btn-outline-secondary">
                                                <i class="bi bi-camera-video"></i> CÃ¡mara
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <p class="text-muted">Total de frames: <strong>@Model.ProcessedFrames.Count</strong></p>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No hay frames procesados disponibles
                    @if (!string.IsNullOrEmpty(Model.SelectedFilter))
                    {
                        <text> para el filtro "<strong>@Model.SelectedFilter</strong>"</text>
                    }
                    .
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal para visualizar imagen -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Vista Previa de Frame</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="imagePreview" src="" alt="Frame procesado" class="img-fluid" style="max-height: 600px;">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var imageModal = document.getElementById('imageModal');
        imageModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var imageName = button.getAttribute('data-image-name');
            var imageId = button.getAttribute('data-image-id');
            
            var modalTitle = imageModal.querySelector('.modal-title');
            modalTitle.textContent = 'Vista Previa: ' + imageName;
            
            // Configurar la fuente de la imagen usando el endpoint de streaming
            var imagePreview = document.getElementById('imagePreview');
            imagePreview.src = '/ProcessedFrames/StreamFrame/' + imageId;
            imagePreview.alt = imageName;
        });
        
        imageModal.addEventListener('hide.bs.modal', function (event) {
            // Limpiar la imagen al cerrar el modal
            var imagePreview = document.getElementById('imagePreview');
            imagePreview.src = '';
        });
    </script>
}
