<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:CameraClient.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
             x:Class="CameraClient.Desktop.Views.LoginView"
             x:DataType="vm:LoginViewModel">
    
    <Border Background="#F5F5F5" Padding="40">
        <StackPanel VerticalAlignment="Center" MaxWidth="400">
            
            <!-- Logo/TÃ­tulo -->
            <TextBlock Text="ðŸŽ¥ CameraClient" 
                       FontSize="32" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>
            
            <!-- Contenedor del formulario -->
            <Border Background="White" 
                    CornerRadius="8" 
                    Padding="30"
                    BoxShadow="0 2 8 0 #20000000">
                <StackPanel Spacing="20">
                    
                    <TextBlock Text="Login" 
                               FontSize="24" 
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    
                    <!-- Server Host -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Server Host" FontWeight="Medium"/>
                        <TextBox Text="{Binding ServerHost}" 
                                 Watermark="localhost or IP address"
                                 Padding="12"/>
                    </StackPanel>
                    
                    <!-- Email -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Email" FontWeight="Medium"/>
                        <TextBox Text="{Binding Email}" 
                                 Watermark="Enter your email"
                                 Padding="12"/>
                    </StackPanel>
                    
                    <!-- Password -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Password" FontWeight="Medium"/>
                        <TextBox Text="{Binding Password}" 
                                 PasswordChar="â—"
                                 Watermark="Enter your password"
                                 Padding="12"/>
                    </StackPanel>
                    
                    <!-- Error message -->
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="Red"
                               TextWrapping="Wrap"
                               IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                    
                    <!-- Login button -->
                    <Button Content="Login" 
                            Command="{Binding LoginCommand}"
                            IsEnabled="{Binding !IsLoading}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Padding="12"
                            FontSize="16"
                            FontWeight="Medium"
                            Background="#0078D4"
                            Foreground="White"
                            CornerRadius="4"/>
                    
                    <!-- Loading indicator -->
                    <ProgressBar IsIndeterminate="True" 
                                 IsVisible="{Binding IsLoading}"
                                 Height="4"/>
                    
                    <!-- Separator -->
                    <Border Height="1" Background="#E0E0E0" Margin="0,10"/>
                    
                    <!-- Register link -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Spacing="5">
                        <TextBlock Text="Don't have an account?" 
                                   Foreground="#666"/>
                        <Button Content="Register here"
                                Command="{Binding NavigateToRegisterCommand}"
                                Background="Transparent"
                                Foreground="#0078D4"
                                BorderThickness="0"
                                Padding="0"
                                Cursor="Hand"/>
                    </StackPanel>
                    
                </StackPanel>
            </Border>
            
        </StackPanel>
    </Border>
    
</UserControl>
