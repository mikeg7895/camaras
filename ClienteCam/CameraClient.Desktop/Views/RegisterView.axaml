<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:CameraClient.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="CameraClient.Desktop.Views.RegisterView"
             x:DataType="vm:RegisterViewModel">
    
    <Border Background="#F5F5F5" Padding="40">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Center" MaxWidth="400">
                
                <!-- Logo/TÃ­tulo -->
                <TextBlock Text="ðŸŽ¥ CameraClient" 
                           FontSize="32" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>
                
                <!-- Contenedor del formulario -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="30"
                        BoxShadow="0 2 8 0 #20000000">
                    <StackPanel Spacing="20">
                        
                        <TextBlock Text="Create Account" 
                                   FontSize="24" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"/>
                        
                        <!-- Username -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Username" FontWeight="Medium"/>
                            <TextBox Text="{Binding Username}" 
                                     Watermark="Choose a username"
                                     Padding="12"/>
                        </StackPanel>
                        
                        <!-- Email -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Email" FontWeight="Medium"/>
                            <TextBox Text="{Binding Email}" 
                                     Watermark="email@example.com"
                                     Padding="12"/>
                        </StackPanel>
                        
                        <!-- Password -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Password" FontWeight="Medium"/>
                            <TextBox Text="{Binding Password}" 
                                     PasswordChar="â—"
                                     Watermark="Minimum 6 characters"
                                     Padding="12"/>
                        </StackPanel>
                        
                        <!-- Confirm Password -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Confirm Password" FontWeight="Medium"/>
                            <TextBox Text="{Binding ConfirmPassword}" 
                                     PasswordChar="â—"
                                     Watermark="Repeat your password"
                                     Padding="12"/>
                        </StackPanel>
                        
                        <!-- Mensaje de error -->
                        <Border Background="#FFE6E6" 
                                CornerRadius="4"
                                Padding="12"
                                IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                            <TextBlock Text="{Binding ErrorMessage}" 
                                       Foreground="#CC0000"
                                       TextWrapping="Wrap"/>
                        </Border>
                        
                        <!-- Mensaje de Ã©xito -->
                        <Border Background="#E6F4EA" 
                                CornerRadius="4"
                                Padding="12"
                                IsVisible="{Binding SuccessMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                            <TextBlock Text="{Binding SuccessMessage}" 
                                       Foreground="#1E8E3E"
                                       TextWrapping="Wrap"/>
                        </Border>
                        
                        <!-- Register button -->
                        <Button Content="Register" 
                                Command="{Binding RegisterCommand}"
                                IsEnabled="{Binding !IsLoading}"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Padding="12"
                                FontSize="16"
                                FontWeight="Medium"
                                Background="#0078D4"
                                Foreground="White"
                                CornerRadius="4"/>
                        
                        <!-- Loading indicator -->
                        <ProgressBar IsIndeterminate="True" 
                                     IsVisible="{Binding IsLoading}"
                                     Height="4"/>
                        
                        <!-- Separator -->
                        <Border Height="1" Background="#E0E0E0" Margin="0,10"/>
                        
                        <!-- Login link -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Spacing="5">
                            <TextBlock Text="Already have an account?" 
                                       Foreground="#666"/>
                            <Button Content="Login here"
                                    Command="{Binding NavigateToLoginCommand}"
                                    Background="Transparent"
                                    Foreground="#0078D4"
                                    BorderThickness="0"
                                    Padding="0"
                                    Cursor="Hand"/>
                        </StackPanel>
                        
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
    </Border>
    
</UserControl>
